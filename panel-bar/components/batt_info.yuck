(defpoll batt_icon :interval "5s" `scripts/battery_icon.sh "icon"`)
(defpoll batt_value :interval "5s" `scripts/battery_icon.sh "value"`)

(defwidget batt_info [] 
  (box :class "batt_info" :visible {batt_value != '-' && batt_icon != '-'} :orientation "horizontal" :halign "center" :space-evenly "false" :spacing 0
    (label :class "batt_info__icon" :text batt_icon)
    (label :class "batt_info__value" :text batt_value)
))
